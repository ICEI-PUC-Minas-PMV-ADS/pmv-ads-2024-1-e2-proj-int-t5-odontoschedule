@model OdontoSchedule.Models.Paciente

@{
    ViewData["Title"] = "AlteracaoSenha";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="login">
    <div class="auth__repr">
        <div>
            <span>Seja bem vindo(a) ao ...</span>
            <img src="/img/logo_auth.png" />
        </div>
    </div>

    <div class="login__conteudo">
        <section class="login-container login-container--paciente">

            <div class="titulo">
                <h1>Alterar Senha</h1>
            </div>

            <form asp-controller="Paciente" asp-action="CriarNovaSenhaC">
                <div class="formulario__inputs">
                    <div class="login__formulario-item">
                        <label>Codigo</label>
                        <input type="text" name="Codigo" class="odonto-input largo alto redondo">
                    </div>
                    <div class="login__formulario-item">
                        <label>Nova Senha</label>
                        <input type="password" name="Senha" class="odonto-input largo alto redondo">
                    </div>
                </div>

                <button class="odonto-botao-primario maior" type="submit">Enviar</button>

                <div class="error-text">
                </div>

                <div class="login__opcoes">
                    <a asp-action="Index">Voltar</a>
                </div>
            </form>
        </section>
    </div>

</section>
