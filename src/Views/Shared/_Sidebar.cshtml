

<div id="barra-lateral">
    <div>
    </div>
    <div id="barra-lateral__informacoes">
        <span id="lateral-icone-usuario"></span>

        <div id="barra-lateral__identidade">
            <span>
                @if (User.IsInRole("PACIENTE"))
                {
                    @User.Identity.Name
                }
                else if(User.IsInRole("SECRETARIA"))
                {
                    @Html.Raw("SECRETARIA")
                }
                else
                {
                    @Html.Raw("ADMINISTRADOR")
                }
            </span>
            <span>
                @if (User.IsInRole("PACIENTE"))
                {
                    @Html.Raw("Paciente")
                }
                else
                {
                    @Html.Raw("Funcionário")
                }
            </span>
        </div>
        <ul>
            @if (User.IsInRole("PACIENTE"))
            {
                <li class="odonto-botao-secundario"><a asp-controller="Paciente" asp-action="Perfil">Editar perfil</a></li>
            }

            @if (!User.IsInRole("ADMIN"))
            {
                <li class="sidebar-mobile-only"><a asp-controller="Atendimento" asp-action="Create">Fazer agendamento</a></li>
                <li class="sidebar-mobile-only"><a asp-controller="Atendimento" asp-action="Index">Ver agendamentos</a></li>
                <li class="sidebar-mobile-only"><a asp-controller="Atendimento" asp-action="Index" asp-route-status="true">Agendamentos concluídos</a></li>
            }

            @if (User.IsInRole("SECRETARIA"))
            {
                <li><a asp-controller="Paciente" asp-action="Index">Usuários</a></li>
            }
            
            @if (!User.IsInRole("PACIENTE"))
            {
                <li><a href="#" id="opcao-alterar-senha">Alterar Senha</a></li>
            }

            @if (User.IsInRole("ADMIN"))
            {
                <li><a href="#" id="opcao-alterar-email">Alterar Email</a></li>
            }

            <li><a asp-controller="@(User.IsInRole("PACIENTE") ? "Paciente" : "Funcionario")" asp-action="Logout">Sair</a></li>
        </ul>
    </div>
</div>
