@model OdontoSchedule.Models.Paciente;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="usuarios-lista-tabs">
    <div class="tabs-cabecalho">
        <a asp-controller="Paciente" asp-action="Index">Pacientes</a>
        <a asp-controller="Dentista" asp-action="Index">Dentistas</a>
    </div>

    <form asp-action="Edit" class="conteudo-tab">
        <div class="row">
            <div class="flex-row">
                <div class="conteudo-tab__lado">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="odonto-input" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNascimento" class="control-label"></label>
                        <input asp-for="DataNascimento" class="odonto-input" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="odonto-input" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Sexo:</label>
                        <div id="campos-sexo">
                            <label class="sexo" for="feminino"><input type="radio" id="feminino" name="sexo" value="false" class="sexo validar input-radio" @(Model.Sexo == false ? "checked" : "")>Feminino</label>
                            <label class="sexo" for="masculino"><input type="radio" id="masculino" name="sexo" value="true" class="sexo validar input-radio" @(Model.Sexo == true ? "checked" : "")>Masculino</label>
                            <label class="sexo" for="outro"><input type="radio" id="outro" name="sexo" value="null" class="sexo validar input-radio" @(Model.Sexo == null ? "checked" : "")>Outro</label>
                        </div>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="odonto-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="odonto-input" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="odonto-input" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="odonto-input" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rua" class="control-label"></label>
                        <input asp-for="Rua" class="odonto-input" />
                        <span asp-validation-for="Rua" class="text-danger"></span>
                    </div>
                </div>
                <div class="conteudo-tab__lado">
                    <div class="form-group">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="odonto-input" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Complemento" class="control-label"></label>
                        <input asp-for="Complemento" class="odonto-input" />
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
        </div>

        <table id="paciente-atendimentos-tabela">
            @foreach (Atendimento atendimento in (List<Atendimento>)ViewData["Atendimentos"])
            {
                <tr>
                    <td>@atendimento.Dentista.Nome</td>
                    <td>@atendimento.Agenda.Data @atendimento.Agenda.Horario.Hora</td>
                </tr>
            }
        </table>

        <div class="form-group">
            <input type="submit" value="Save" class="odonto-botao-primario maior" />
        </div>

    </form>
</div>